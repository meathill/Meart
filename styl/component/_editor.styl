.dbl-click-editor
  > *:not(input)
    text-decoration 1px dashed

    &:after
      font-family 'FontAwesome'
      content ' \f044'
      color lighten(active-color, 10%)
      font-size .75em

    &.editing
      border: 1px solid

      &:after
        content ''
  input
    display none

  &.editing
    *
      display none

    input
      display block