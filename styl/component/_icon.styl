.fa-stack
  background-color inherit
  border-color inherit

.pbr,
.with-add-icon:after
  transition all .2s ease-in-out
  position absolute
  right -8px
  bottom -2px
  border-radius 50%
  width 1em
  text-align center
  background-color inherit
  border 1px solid
  border-color inherit

.with-add-icon
  position relative

  &:after
    content '\f055'
    font-family 'FontAwesome'
    font-size .5em

.fa-rotate
  transition all .2s ease-in-out
  background-color inherit

for deg in -6..6
  .fa-rotate-n{deg * 5}
    transform rotate(deg * 5deg)