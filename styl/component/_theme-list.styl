.theme-list
  .card
    overflow hidden

    .card-img
      width 100%

    .card-img-overlay
      color white
      padding .5rem
      background-color rgba(0,0,0,.2)
      transition all 0.2s
      transform translateY(7.5rem)

      h4
        font-size .9rem

      p
        font-size .8rem

    &:hover .card-img-overlay
      transform translateY(0)

  input:checked + label.card
    color active-color

    &:before
      background-color rgba(0,0,0,.2)
      border 4px solid active-color
      content '\f058'
      font-family 'FontAwesome'
      font-size 4rem
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 1050
      display flex
      align-items center
      justify-content center

  img
    max-width 100%