aside-width = 80px
gap = 10px
button-size = aside-width - gap * 2

#home
  height 100%

  aside
    width: aside-width
    position fixed
    top: 0
    left: 0
    bottom: 0
    padding gap

    > a.btn
      height button-size
      font-size 0.75em
      line-height 1.5em
      padding 0

      + a.btn
        margin gap 0 0

      > i
        font-size 2em
        line-height 1.5em

      &.router-link-active
        background-color darken(white, 10%)
        border-color darken(white, 12%)
        background-image none
        box-shadow inset 0 3px 5px rgba(0,0,0,.125)

      &.secondary
        position absolute
        border none
        line-height button-size
        left gap
        bottom gap
        width button-size

        > i
          line-height button-size

  .container-fluid
    background-color white
    min-height 100%
    margin-left aside-width
    padding-top 15px

  .settings
    .card-img-top
      width 100%

.site-icon
  max-width 64px
  max-height 64px