.article
  .list
    padding 0

    li
      list-style none

      img
        max-height 400px

    a.card
      color black

      &:hover
        background-color alert-info-bg
        border-color brand-primary
        text-decoration none

    .add
      .btn
        color #444
        font-size 5em
        border .5rem dashed

      button
        height 10rem

      input
        display none

  &.single
    header > *:last-child
      padding-top 3rem

    .thumbnail label
      width 100%
      cursor pointer

      img
        width 100%

        &:hover
          border-color brand-primary

    .album .delete-button
      background-color transparent
      border-color currentColor
      color white
      position absolute
      top .5rem
      right .5rem

      &:hover
        background-color white
        color lighten(black, 20%)

#article-list
  .card
    width 100%