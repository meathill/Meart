.article
  &.article-list
    padding-left 2rem

    h2
      line-height 3em
      margin-bottom 0

  .list
    padding 0

    li
      list-style none
      margin-bottom 1rem

      .card-block
        position relative

      .status
        position absolute
        top 1rem
        right 1rem

    .card-img-top
      display block
      margin 0 auto
      width 100%
      height 250px
      object-fit cover

    .card,
    .add .btn
      min-height 26rem
      border-radius 0
      box-shadow 0 4px 8px rgba(0,0,0,.2)
      color black

      &:hover
        box-shadow 0 2px 4px rgba(0,0,0,.5)
        color black
        text-decoration none

      .card-img-top
        border-radius 0

    .add

      i
        color active-color
        line-height 3em

      .btn
        color muted-color
        cursor pointer

      label
        display flex
        flex-direction column
        justify-content center
        align-items center

      input
        display none

  &.single
    header
      background-color white
      border-bottom 1px solid border-color
      padding 2rem

      .row
        margin 0

      [class|=col]
        padding 0

      h1
        font-size 1.875rem

      p.text-muted
        margin-bottom 0

    .thumbnail label
      width 100%
      padding-right 2rem
      cursor pointer
      display block
      margin-bottom 0

      img
        width 100%
        max-height 15rem
        object-fit cover
        display block

        &:hover
          border-color brand-primary

    .album
      padding 2rem 1rem 0

      .delete-button
        background-color transparent
        border-color currentColor
        color white
        position absolute
        top .5rem
        right .5rem

        &:hover
          background-color darken(red, 20%)
          color white