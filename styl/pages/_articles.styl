.article
  &.article-list
    h2
      font-size 1.875rem
      line-height 3em
      margin-bottom 0

  .list
    padding 0

    li
      list-style none
      margin-bottom 1rem

      .card-block
        position relative

      .status
        position absolute
        top 1rem
        right 1rem

    .card-img-top
      display block
      margin 0 auto
      width 100%
      height 250px
      object-fit cover

    a.card,
    .add .btn
      min-height 26rem
      border-radius 0
      box-shadow 0 4px 8px rgba(0,0,0,.2)
      color black

      &:hover
        box-shadow 0 2px 4px rgba(0,0,0,.5)
        color black
        text-decoration none

      .card-img-top
        border-radius 0

    .add
      i
        line-height 3em

      .btn
        color muted-color
        cursor pointer

      input
        display none

  &.single
    header
      .thumbnail img
        max-height 200px
        object-fit cover

      > *:last-child
        padding-top 3rem

    .thumbnail label
      width 100%
      cursor pointer

      img
        width 100%

        &:hover
          border-color brand-primary

    .album
      .delete-button
        background-color transparent
        border-color currentColor
        color white
        position absolute
        top .5rem
        right .5rem

        &:hover
          background-color darken(red, 20%)
          color white