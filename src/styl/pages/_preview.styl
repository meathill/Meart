#preview
  display block

  > header
    background-color white
    position relative

    p
      font-size 0.875rem
      margin-bottom 0

    .button-group
      position absolute
      right 2rem
      bottom 1.5rem

      .btn + .btn
        margin-left 1rem

  .navbar
    padding 1rem 2rem

    button
      line-height 1.875rem
      width 3rem

      + button
        margin-left .5rem

  div
    padding 0 2rem

  iframe
    border none
    width 100%